{
  "name": "Progre",
  "description": "一个能更好管理你时间的工具",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "Progre",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "chrome_url_overrides": {
    "newtab": "tab/tab.html"
  }
}
